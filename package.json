{
  "name": "homebridge",
  "type": "module",
  "version": "2.0.0",
  "description": "HomeKit support for the impatient",
  "author": "Nick Farina",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/homebridge/homebridge.git"
  },
  "bugs": {
    "url": "https://github.com/homebridge/homebridge/issues"
  },
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "maintainers": [
    "oznu <dev@oz.nu>",
    "Andreas Bauer <mail@anderl-bauer.de>"
  ],
  "bin": {
    "homebridge": "bin/homebridge"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "config-sample.json",
    "dist"
  ],
  "engines": {
    "node": "^18.15.0 || ^20.7.0 || ^22.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "check": "npm install && npm outdated",
    "clean": "rimraf dist && rimraf coverage",
    "dev": "DEBUG=* ./bin/homebridge -D -P example-plugins/ || true",
    "docs": "typedoc",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint-docs": "typedoc --emit none --treatWarningsAsErrors",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean",
    "test": "vitest run",
    "test-coverage": "npm run test -- --coverage",
    "watch": "nodemon"
  },
  "preferGlobal": true,
  "dependencies": {
    "chalk": "5.3.0",
    "commander": "12.1.0",
    "fs-extra": "11.2.0",
    "hap-nodejs": "1.1.1-beta.2",
    "qrcode-terminal": "0.12.0",
    "semver": "7.6.3",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.1",
    "@types/semver": "^7.5.8",
    "@types/source-map-support": "^0.5.10",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.9.1",
    "eslint-plugin-format": "^0.1.2",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
